<article>
  <a href="/dashboard" class="dashboard-btn">&larr; Back To Dashboard</a>
  <form class="edit-recipe-form">
    <div class="form-header">
      <h2>Edit That Recipe</h2>
    </div>
    <div class="recipe-form-container">
      <div>
        <input name="recipe-title" type="text" value="{{recipe.title}}" />
        <span>({{recipe_content}})</span>
        console.log(recipe_content)
        <div>({{recipe.ingredients}})</div>
        console.log(recipe.ingredients)
      </div>

      <div>
        {{recipe.vote_count}}
        {{format_plural "point" recipe.vote_count}}
        by you on
        {{format_date recipe.created_at}}
        |
        <a href="/recipes/{{recipe.id}}">{{recipe.comments.length}}
          {{format_plural "comment" recipe.comments.length}}</a>
      </div>

      <button type="submit">Save Recipe</button>
      <button type="button" class="delete-recipe-btn">Delete Recipe</button>
    </div>
  </form>
</article>

<form class="form-comment-container">
  <div>
    <textarea name="comment-body" class="comment-section"></textarea>
  </div>

  <div class="comment-submit-container">
    <button type="submit" class="comment-submit">Add Comment</button>
  </div>
</form>

{{> comments recipe.comments}}

<script src="/javascript/comment.js"></script>
<script src="/javascript/delete-recipe.js"></script>
<script src="/javascript/edit-recipe.js"></script>