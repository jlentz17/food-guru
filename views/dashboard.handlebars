
<section>
  <h2>Add New Recipe</h2>

  <form class="new-recipe-form" id="newRecipe">
    <div>
      <label for="recipe-title">Title</label>
      <input type="text" id="recipe-title" name="recipe-title" />
    </div>
    <div>
      <label for="recipe-ingredients">Ingredients</label>
      <input id="recipe-ingredients" name="recipe-ingredients" />
    </div>
    <div>
      <label for="recipe-content">Recipe Content</label>
      <input id="recipe-content" name="recipe-content" />
    </div>
    <div>
      <button type="submit" class="btn">Create</button>
    </div>
  </form>

