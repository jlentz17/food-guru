{{#if userRecipes.length}}
<section>
  <h2>Your Recipes</h2>
  <ol>
    {{#each userRecipes as |recipe|}}
    <li>
      {{> recipe-info recipe}}
      <br>
      <a href="/dashboard/edit/{{recipe.id}}" class="edit-link">Edit Recipe</a>
    </li>
    {{/each}}
  </ol>
</section>
{{/if}}

<script src="/javascript/add-recipe.js"></script>